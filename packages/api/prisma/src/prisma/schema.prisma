generator client {
  provider = "prisma-client-js"
  // Используем стандартный output для монорепозитория
  // Prisma сгенерирует клиент в node_modules/@prisma/client
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        BigInt   @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
