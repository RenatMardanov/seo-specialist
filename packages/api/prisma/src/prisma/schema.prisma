generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
  // По умолчанию генерит в node_modules/@prisma/client у потребителя
  // output можно менять, но чаще оставляют дефолт.
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        BigInt   @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
